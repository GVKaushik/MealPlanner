<div>
  <div>
    <h1>
      Recipe #<%= @the_recipe.id %> details
    </h1>

    <div>
      <div>
        <a href="/recipes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_recipe/<%= @the_recipe.id %>">
          Delete recipe
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_recipe.user_id %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_recipe.name %>
      </dd>

      <dt>
        Dish type
      </dt>
      <dd>
        <%= @the_recipe.dish_type %>
      </dd>

      <dt>
        Full recipe
      </dt>
      <dd>
        <%= @the_recipe.full_recipe %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <%= @the_recipe.cuisine %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_recipe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit recipe
    </h2>

    <form action="/modify_recipe/<%= @the_recipe.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_recipe.user_id %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_recipe.name %>">
      </div>

      <div>
        <label for="dish_type_box">
          Dish type
        </label>

        <input type="text" id="dish_type_box" name="query_dish_type" value="<%= @the_recipe.dish_type %>">
      </div>

      <div>
        <label for="full_recipe_box">
          Full recipe
        </label>

        <textarea id="full_recipe_box" name="query_full_recipe"><%= @the_recipe.full_recipe %></textarea>
      </div>

      <div>
        <label for="cuisine_box">
          Cuisine
        </label>

        <input type="text" id="cuisine_box" name="query_cuisine" value="<%= @the_recipe.cuisine %>">
      </div>

      <button>
        Update recipe
      </button>
    </form>
  </div>
</div>

<hr>
