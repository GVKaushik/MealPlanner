<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="/css/my_styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.css">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>


<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Recipe for Disaster</a>
    
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        
        <% if current_user !=nil %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_out"> Sign out </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/users/edit"> Edit profile </a>
          </li>

          <% else %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_up"> Sign up </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in"> Sign in </a>
          </li>
          <% end %>    
      </ul>
      
    </div>
  </div>
</nav>

    <% if notice.present? %>
      <div>
      <%=notice%>
      </div>
    <% end %>
    <% if alert.present?%>
      <div>
        <%=alert%>
      </div>
      <% end %>
    <%= yield %>
  </body>
</html>
