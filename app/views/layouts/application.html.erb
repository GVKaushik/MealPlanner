<!DOCTYPE html>
<html>
  <head>
    <title>Recipe for Disaster</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- 1) Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <!-- 2) Rails’ application.css (your other styles, if any) -->
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>

    <!-- 3) Your custom overrides, loaded last -->
    <%= stylesheet_link_tag "my_styles", media: "all", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>

    <!-- Bootstrap JS (for navbar toggler) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <!-- “Home” always -->
        <%= link_to "Home", root_path, class: "navbar-brand" %>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mainNav"
          aria-controls="mainNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav ms-auto">
            <% if current_user.present? %>
              <li class="nav-item">
                <%= link_to "Sign out",
                            destroy_user_session_path,
                            method: :delete,
                            class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Edit profile",
                            edit_user_registration_path,
                            class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign up",
                            new_user_registration_path,
                            class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign in",
                            new_user_session_path,
                            class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-success m-3"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger m-3"><%= alert %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
